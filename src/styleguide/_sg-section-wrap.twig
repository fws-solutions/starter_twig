<div id="{{ sectionConfig.sectionID }}" data-section-title="{{ sectionConfig.title }}" class="styleguide__section js-styleguide-section">
	<div class="container">
		<div class="styleguide__head">
			<h2 class="styleguide__head--mod">{{ sectionConfig.title }}</h2>
		</div>
	</div>

	<div class="styleguide__body">
		<div class="container">
			{% if sectionConfig.row %}
				<div class="row">
					{% block sgContent %}
						Sorry, no styleguide content
					{% endblock %}
				</div>
			{% else %}
				{% block sgContent %}
					Sorry, no styleguide content
				{% endblock %}
			{% endif %}
		</div>
	</div>
</div> <!-- Styleguide section -->
